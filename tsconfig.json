{
    "compilerOptions": {
		"experimentalDecorators": true,
		"target": "ES2016",
		"sourceMap": true,
		"declarationMap": true,
		"outDir": "./dist",
        "rootDir": "./src",
		"module": "CommonJS",
		"moduleResolution": "node",
        "stripInternal": true,
		"preserveSymlinks": true,
        "importHelpers": false,
        "esModuleInterop": true,
		"lib": [
			"es2021",
			"dom"
		],
		"declaration": true,
		"emitDecoratorMetadata": true,
		"downlevelIteration": true
    },
    "include": [ "./src/**/*.ts" ]
}